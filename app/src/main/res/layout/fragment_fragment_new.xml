<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="true"
    tools:context=".fragment.FragmentNew">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/custome_standard_drawable"
                android:layout_height="120dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_perm_identity_black_48dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_marginTop="10dp"
                    android:contentDescription="Nuevo Contacto"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CREAR CONTACTO"
                    android:gravity="center"
                    android:textSize="@dimen/standard_dimen_text_view"
                    android:textColor="@color/colorDelTextView"
                    android:textStyle="bold"
                    />


            </LinearLayout>

            <EditText
                android:id="@+id/editTextNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/nombre"
                android:textStyle="bold"
                android:textSize="@dimen/standard_dimen_edit_text"
                android:layout_marginTop="15dp"
                android:inputType="textPersonName"
                />

            <EditText
                android:id="@+id/editTextApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/apellidos"
                android:textStyle="bold"
                android:textSize="@dimen/standard_dimen_edit_text"
                android:inputType="textPersonName"
                />

            <EditText
                android:id="@+id/editTextTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/telefono"
                android:textStyle="bold"
                android:textSize="@dimen/standard_dimen_edit_text"
                android:inputType="textPersonName"
                />

            <Spinner
                android:id="@+id/spinnerTipoTelefono"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <ImageButton
                android:id="@+id/imageButtonSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_save_black_36dp"
                android:background="@drawable/custome_standard_drawable"
                android:gravity="center"
                />


        </LinearLayout>


    </ScrollView>











</FrameLayout>